{# templates/upload.html.twig #}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upload d'image</title>

    {# Inclusion de Bootstrap via CDN #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    {# Inclusion du fichier CSS personnalisé #}
    <link href="{{ asset('css/styles.css') }}" rel="stylesheet">
</head>
<body>
    <div class="upload-container">
        <h1>Uploader une image</h1>
        <p>Choisissez une image pour que notre modèle puisse effectuer une prédiction.</p>
        <form action="{{ path('predict') }}" method="post" enctype="multipart/form-data">
            <input type="file" name="image" required class="form-control">
            <select name="model" class="form-select mt-3" required>
                <option value="random_forest_model.rbx">Random Forest</option>
                <option value="mlp_model.rbx">MLP (Multi-Layer Perceptron)</option>
            </select>
            <button type="submit" class="btn btn-primary mt-3">Envoyer</button>
        </form>
        <a href="{{ path('home') }}" class="btn btn-secondary mt-3">Retour à l'accueil</a>
    </div>
</body>
</html>
